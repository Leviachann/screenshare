<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client App" Height="350" Width="450">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <Button x:Name="ConnectButton" Content="Connect" Click="ConnectButton_Click" Width="100" Height="30" Margin="10"/>
            <Button x:Name="LiveButton" Content="Live" Click="LiveButton_Click" Width="100" Height="30" Margin="10" IsEnabled="False"/>
            <Image x:Name="ScreenshotImage" Width="400" Height="300" Stretch="Uniform"/>
        </StackPanel>
    </Grid>
</Window>
